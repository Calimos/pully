{
  "name": "pully",
  "version": "2.2.1",
  "description": "A simple CLI for downloading high quality YouTube videos!",
  "main": "index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "pully": "./dist/bin/pully.js"
  },
  "scripts": {
    "clean": "rimraf ./dist/**",
    "build": "tsc",
    "test": "npm run build && nyc --color -a ava -v",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "watch": "concurrently npm:watch:*",
    "watch:build": "tsc --watch",
    "watch:test": "ava --watch",
    "version": "git add -A",
    "postversion": "git push && git push --tags && npm publish"
  },
  "repository": {
    "url": "git+https://github.com/JimmyBoh/pully.git",
    "type": "git"
  },
  "keywords": [
    "youtube",
    "download",
    "cli",
    "ffmpeg",
    "encode",
    "api"
  ],
  "author": "Jim Buck <jim@jimmyboh.com>",
  "contributors": [
    "Eirik Albrigtsen <analsandblaster@gmail.com>",
    "Mario Tacke <https://mariotacke.io/>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JimmyBoh/pully/issues"
  },
  "homepage": "https://github.com/JimmyBoh/pully#readme",
  "devDependencies": {
    "@types/debug": "^0.0.30",
    "@types/lodash.template": "^4.4.4",
    "@types/node": "^10.9.1",
    "@types/through": "0.0.29",
    "@types/tmp": "0.0.33",
    "ava": "^0.25.0",
    "concurrently": "^3.6.1",
    "coveralls": "^3.0.2",
    "nyc": "^12.0.2",
    "rimraf": "^2.6.2",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "commander": "^2.17.1",
    "conf": "^2.0.0",
    "debug": "^3.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "lodash.template": "^4.4.0",
    "lodash.throttle": "^4.1.1",
    "log-update": "^2.3.0",
    "mkdirp-promise": "^5.0.1",
    "pully-core": "^0.5.2",
    "sanitize-filename": "^1.6.1",
    "tmp": "0.0.33",
    "update-notifier": "^2.5.0",
    "ytdl-core": "^0.24.0"
  },
  "ava": {
    "files": [
      "./dist/**/*.spec.js"
    ],
    "source": [
      "./dist/**/*.js"
    ]
  },
  "nyc": {
    "include": [
      "dist/**/*.js"
    ],
    "exclude": [
      "dist/**/*.spec.js",
      "dist/bin/pully.js",
      "dist/debug.js",
      "dist/lib/models.js"
    ]
  }
}
